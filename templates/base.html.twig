<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %} - Lebonangle</title>
    {{ encore_entry_link_tags('app') }}
    <style>
        .nav-link {
            color: white;
        }
        .dark-purple {
            background-color: darkmagenta;
            color: white;
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-sm bg-dark">

    <ul class="navbar-nav w-100 ">
        <li class="nav-item">
            <a class="nav-link ml-3" href="{{ path('home') }}"><i class="fa fa-home"></i> Accueil</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('advert_index') }}">Annonces</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('category_index') }}">Categories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_user_index') }}">Admin</a>
        </li>
        {% if app.user %}
            <li class="nav-item ml-auto">
                <a class="nav-link" href="{{ path('app_logout') }}">Se d√©connecter</a>
            </li>
        {% else %}
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                </li>
            </ul>
        {% endif %}
    </ul>
</nav>

{% if app.user %}
    <div class="dark-purple">
        Bienvenue {{ app.user.username }} - {{ app.user.email }}
    </div>
{% endif %}

<div class="container">
    <div class="my-3">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type == 'error' ? 'danger' : type }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    {% block body %}{% endblock %}
</div>

{{ encore_entry_script_tags('app') }}
{% block javascripts %}
{% endblock %}
</body>
</html>
