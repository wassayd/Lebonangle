{% extends 'base.html.twig' %}

{% block title %}AdminUser{% endblock %}

{% block body %}
    <h1 class="jumbotron">DÃ©tail de l'utilisateur</h1>

    <table class="table my-5">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ admin_user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ admin_user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ admin_user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in admin_user.roles %}
                        <span class="badge bg-info">{{role | lower}}</span>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between" style="width: 300px">
        <a href="{{ path('admin_user_index') }}" class="btn btn-info">Back to list</a>

        <a href="{{ path('admin_user_edit', {'id': admin_user.id}) }}" class="btn btn-success">Edit</a>

        {% if app.user != admin_user %}
            {{ include('admin_user/_delete_form.html.twig') }}
        {% else %}
            <button disabled class="btn btn-danger  text-decoration-line-through">delete</button>
        {% endif %}

    </div>
{% endblock %}
