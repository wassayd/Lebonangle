{% extends 'base.html.twig' %}

{% block title %}Edit AdminUser{% endblock %}

{% block body %}
    <h1 class="jumbotron">Editer l'utilisateur</h1>

    {{ include('admin_user/_form.html.twig', {'button_label': 'Editer'}) }}

    <div class="d-flex">
        <a href="{{ path('admin_user_index') }}" class="btn btn-info mr-3"><i class="fa fa-arrow-circle-left"></i> Retour</a>

        {% if app.user != admin_user %}
            {{ include('admin_user/_delete_form.html.twig') }}
        {% else %}
            <button disabled class="btn btn-danger"><i class="fa fa-trash"></i></button>
        {% endif %}
    </div>
{% endblock %}
